<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/negro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jessi.tae.negroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:background="@drawable/fondo2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="@dimen/tamanosubtitulo"
                android:textColor="@color/blanco"
                android:background="@color/base"
                android:fontFamily="@font/capture_it"
                android:padding="@dimen/margen2"
                android:layout_margin="@dimen/margen2"
                android:text="CinturÃ³n negro" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewTitulo"
                android:layout_margin="@dimen/margen2"
                android:fontFamily="@font/courier"

                android:text="@string/significadonegro" />


            <ImageButton
                android:id="@+id/imageButtonAtaque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageButtonPosicion"
                android:layout_toEndOf="@+id/textViewPumse"
                android:layout_toRightOf="@+id/textViewPumse"
                android:background="@drawable/boton_redondo"
                app:srcCompat="@drawable/botonataque" />

            <ImageButton
                android:id="@+id/imageButtonPosicion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageButtonDefensa"
                android:layout_alignStart="@+id/imageButtonDefensa"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="19dp"
                android:background="@drawable/boton_redondo"
                app:srcCompat="@drawable/botonposicion" />

            <ImageButton
                android:id="@+id/imageButtonDefensa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewPosicion"
                android:layout_marginEnd="19dp"
                android:layout_marginRight="19dp"
                android:layout_toLeftOf="@+id/imageButtonPatada"
                android:layout_toStartOf="@+id/imageButtonPatada"
                android:background="@drawable/boton_redondo"
                app:srcCompat="@drawable/botondefensa" />

            <ImageButton
                android:id="@+id/imageButtonPatada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageButtonAtaque"
                android:layout_alignStart="@+id/imageButtonAtaque"
                android:layout_below="@+id/textViewAtaque"
                android:background="@drawable/boton_redondo"
                app:srcCompat="@drawable/botonpatada" />

            <TextView
                android:id="@+id/textViewPosicion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageButtonPosicion"
                android:layout_alignRight="@+id/imageButtonPosicion"
                android:layout_below="@+id/imageButtonPosicion"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp"
                android:fontFamily="@font/turtles"
                android:text="@string/tituloposicionnegro" />

            <TextView
                android:id="@+id/textViewAtaque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageButtonAtaque"
                android:layout_alignRight="@+id/imageButtonAtaque"
                android:layout_below="@+id/imageButtonAtaque"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/turtles"
                android:text="@string/tituloataquenegro" />

            <TextView
                android:id="@+id/textViewDefensa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textViewPosicion"
                android:layout_alignRight="@+id/textViewPosicion"
                android:layout_below="@+id/imageButtonDefensa"
                android:fontFamily="@font/turtles"
                android:text="@string/titulodefensanegro" />

            <TextView
                android:id="@+id/textViewPatada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textViewDefensa"
                android:layout_alignEnd="@+id/textViewAtaque"
                android:layout_alignRight="@+id/textViewAtaque"
                android:fontFamily="@font/turtles"
                android:text="@string/titulopatadanegro" />

            <ImageButton
                android:id="@+id/imageButtonPumse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageButtonDefensa"
                android:layout_alignStart="@+id/imageButtonDefensa"
                android:layout_below="@+id/textViewDefensa"
                android:background="@drawable/boton_redondo"
                app:srcCompat="@drawable/botonpumse" />

            <TextView
                android:id="@+id/textViewPumse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButtonPumse"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"
                android:fontFamily="@font/turtles"
                android:text="@string/titulopumsenegro" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageButtonPumse"
                android:layout_toLeftOf="@+id/textViewPumse"
                android:layout_toStartOf="@+id/textViewPumse"
                android:fontFamily="@font/turtles"
                android:text="@string/titulopumsenegro" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageButtonPum"
                android:layout_alignRight="@+id/imageButtonPum"
                android:layout_below="@+id/imageButtonPum"
                android:fontFamily="@font/turtles"
                android:text="@string/titulopumnegro" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textViewPumse"
                android:layout_margin="@dimen/margen2"
                android:fontFamily="@font/turtles"
                android:text="@string/nombrecombinaciontecnicasnegro" />
            <TextView
                android:id="@+id/textViewPum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView13"
                android:layout_margin="@dimen/margen2"
                android:fontFamily="@font/courier"
                android:text="@string/combinaciontecnicasnegro1" />

            <ImageButton
                android:id="@+id/imageButtonPum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewPatada"
                android:layout_toEndOf="@+id/textViewPumse"
                android:layout_toRightOf="@+id/textViewPumse"
                android:background="@drawable/boton_redondo"
                android:src="@drawable/botonpum" />
        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/navnegro"
        app:headerLayout="@layout/header"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:background="@color/colorAccent"
        app:itemTextColor="@color/colorPrimary"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
